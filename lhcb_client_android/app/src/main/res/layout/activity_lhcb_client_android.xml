<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="rethink.eu.lhcb.client.android.LHCBClientAndroid">

    <TextView
            android:text="ROBERT WAS HERE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/connectbtn" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop"
            android:id="@+id/stopbtn"
            android:layout_below="@+id/textView" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;ConnectivityMonitorState>"
            android:id="@+id/conmonstate"
            android:layout_below="@+id/connectbtn" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignRight="@+id/stopbtn"
            android:layout_alignEnd="@+id/stopbtn"/>
</RelativeLayout>
